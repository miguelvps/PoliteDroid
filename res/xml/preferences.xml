<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
            android:key="options_enabled"
            android:title="@string/options_enabled"
            android:summary="@string/options_enabled_summary"/>
    <PreferenceCategory
            android:key="options_settings"
            android:title="@string/options_settings">
        <android.preference.ListPreferenceMultiSelectCalendar
                android:key="options_calendars"
                android:title="@string/options_calendars"
                android:summary="@string/options_calendars_summary"
                android:dialogTitle="@string/options_calendars"
                android:entries="@array/calendars"
                android:entryValues="@array/calendars"/>
        <CheckBoxPreference
                android:key="options_events_all_day"
                android:title="@string/options_events_all_day"
                android:summary="@string/options_events_all_day_summary"/>
        <CheckBoxPreference
                android:key="options_vibrate"
                android:title="@string/options_vibrate"
                android:summary="@string/options_vibrate_summary"
                android:defaultValue="true"/>
    </PreferenceCategory>
</PreferenceScreen>
