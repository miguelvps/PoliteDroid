<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
            android:key="options_enabled"
            android:title="@string/options_enabled"
            android:summary="@string/options_enabled_summary"/>
    <PreferenceCategory
            android:key="options_settings"
            android:title="@string/options_settings">
        <com.pkg.android.preference.ListPreferenceMultiSelectCalendar
                android:key="options_calendars"
                android:title="@string/options_calendars"
                android:summary="@string/options_calendars_summary"
                android:dialogTitle="@string/options_calendars"
                android:entries="@array/calendars"
                android:entryValues="@array/calendars"/>
        <ListPreference
                android:key="options_sound_profile"
                android:title="@string/options_sound_profile"
                android:entries="@array/sound_profiles"
                android:entryValues="@array/sound_profiles_values"
                android:defaultValue="1"/>
    </PreferenceCategory>
</PreferenceScreen>
